<% include ../partials/header %>

<div class="container" style="text-align: center; width: 30%">
  <div class="row">
    <h1>Comment on <%= campground.name %></h1>

    <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
      <div class="form-group">
        <input class="form-control" type="text" name="comments.text" placeholder="Comment">
      </div>
      <div class="form-group">
        <input class="form-control" type="text" name="comments.author" placeholder="Your Name">
      </div>
      <div class="form-group">
        <button class="btn btn-block btn-success">Submit</button>
      </div>
    </form>

    <a href="/campgrounds">Go Back</a>
  </div>
</div>

<% include ../partials/footer %>